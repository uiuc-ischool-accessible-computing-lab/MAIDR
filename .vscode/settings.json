{
  // Exclude all files and folders from search by default
  "search.exclude": {
    "dist/**": true,
    "docs/**": true,
    "examples/**": true,
    "galleries/**": true,
    "ManualTestingProcess.md": true,
    "README.md": true,
"user_study_2": true,
"user_study_pilot": true
  },

  // Include only the src/ folder and its subfolders in the search
  "search.include": [
    "src/**"
  ],

  "window.title": "${activeRepositoryBranchName} ${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}${appName}",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.defaultModel": "foldingProviderModel",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "cmake.configureOnOpen": false,
  "githubPullRequests.pullRequestDescription": "Copilot",
  "githubPullRequests.createOnPublishBranch": "ask",
  "githubPullRequests.pullBranch": "always",
  "githubPullRequests.pushBranch": "always",
  "githubPullRequests.notifications": "pullRequests",
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "repo:${owner}/${repository} is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "repo:${owner}/${repository} is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "repo:${owner}/${repository} is:open author:${user}"
    },
    {
      "label": "Mentioned Me",
      "query": "repo:${owner}/${repository} is:open mentions:${user}"
    }
  ],
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "default"
    },
    {
      "label": "Created Issues",
      "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
    },
    {
      "label": "Recent Issues",
      "query": "state:open repo:${owner}/${repository} sort:updated-desc"
    },
    {
      "label": "Mentioned Me",
      "query": "state:open mentions:${user} repo:${owner}/${repository} sort:created-desc"
    }
  ],
  "githubPullRequests.defaultMergeMethod": "squash",

    "git.ignoreRebaseWarning": true,
  "git.supportCancellation": true,
  "git.openRepositoryInParentFolders": "always",
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.smartCommitChanges": "all",
  "git.postCommitCommand": "sync",
  "git.showPushSuccessNotification": true,
  "conventionalCommits.autoCommit": true,
  "conventionalCommits.showEditor": true,
  "conventionalCommits.scopes": [
    "vscode",
    "braille",
    "text",
    "sonification",
    "llm",
    "ui",
    "api",
    "release"
  ],
  "githubPullRequests.ignoredPullRequestBranches": [
    "main"
  ]
}
